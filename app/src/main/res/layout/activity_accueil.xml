<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccueilActivity"
    >

    <!-- Accueil-->
    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1in"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/luigislogo_w"
            android:autofillHints="logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coordonnees_pizza"
            android:textColor="@color/material_dynamic_tertiary50"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textSize="25dp" />
    </TableLayout>



    <!-- Les informations du clients -->


    <!-- Les informations de la commande -->


    <!-- Les buttons -->

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="251dp"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        app:layout_constraintVertical_bias="0.146"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-7dp">


        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="238dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="1in"
                android:layout_height="1in"
                android:layout_gravity="center"
                android:autofillHints="image1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:text="pizza1Nom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="238dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="1in"
                android:layout_height="1in"
                android:layout_gravity="center"
                android:autofillHints="image2"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:text="pizza2Nom" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="187dp"
        android:layout_height="67dp"
        android:text="Connexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924" />

    <Button
        android:id="@+id/btnInscription"
        android:layout_width="185dp"
        android:layout_height="66dp"
        android:text="Inscription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />


</androidx.constraintlayout.widget.ConstraintLayout>